<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/payment_total"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/ltotalbelanja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Rp. 20.000"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_below="@+id/tv1"/>
    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/payment_change"
        android:textSize="16dp"
        android:layout_below="@id/ltotalbelanja"/>

    <TextView
        android:id="@+id/lkembalian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Rp. 20.000"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_below="@id/tv2"/>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/payment_total_money"
        android:textSize="16dp"
        android:layout_below="@id/lkembalian"/>

    <EditText
        android:id="@+id/edjumlahuang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/roundededtext"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text=""
        android:textSize="20sp"
        android:layout_below="@id/textView15"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:id="@+id/lineuang"
        android:gravity="center"
        android:layout_below="@id/edjumlahuang">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/b1"
                style="@style/DefaultButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:text="1000"
                android:textColor="@color/colorPrimary"/>

            <Button
                android:id="@+id/b2"
                style="@style/DefaultButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:text="2000"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/b5"
                style="@style/DefaultButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:text="5000"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/b10"
                style="@style/DefaultButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:text="10000"
                android:textColor="@color/colorPrimary"/>

            <Button
                android:id="@+id/b20"
                style="@style/DefaultButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="10dp"
                android:text="20000"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/b50"
                style="@style/DefaultButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="10dp"
                android:text="50000"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/b100"
                style="@style/DefaultButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="10dp"
                android:text="100000"
                android:textColor="@color/colorPrimary"/>
            <Button
                android:id="@+id/bpass"
                style="@style/DefaultButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="@string/payment_pass"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/boke"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lineuang"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Bayar"
        android:textColor="#ffffff"/>

</RelativeLayout>